<p id="notice"><%= notice %></p>

<h1>Host Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Hostname</th>
      <th>Ip</th>
      <th>Secret</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @host_addresses.each do |host_address| %>
      <tr>
        <td><%= host_address.hostname %></td>
        <td><%= host_address.ip %></td>
        <td>********</td>
        <td><%= link_to 'Show', host_address %></td>
        <td><%= link_to 'Edit', edit_host_address_path(host_address) %></td>
        <td><%= link_to 'Destroy', host_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

